name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

       input_artifact:
        description: Dataset artifact name you want to download
        type: string

      output_artifact:
        description: Output artifact name
        type: string

      output_type:
        description: Type of the output artifact
        type: string

      output_description:
        description: Description of the artifact
        type: string

      min_price:
        description: Minimum price to clean outliers
        type: string

      max_price:
        description: Maximum price for cleaning outliers
        type: string


    command: >-
        python run.py  -- input_artifact { input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
